#%Module1.0#####################################################################
##
## CDO modulefile

set modulefile [lrange [split [module-info name] {/}] 0 0]
set release    [lrange [split [module-info name] {/}] 1 1]
set famhome   /home/metno_op/emep/cwf
set apphome   $famhome/modules
set appname   "emep-ctm"
set appurl    https://github.com/metno/emep-mscw/releases/tag/$release

proc ModulesDisplay {} {
  global appname release apphome

  puts stderr "\nLoads $appname version $release"
}

proc ModulesHelp { } {
  global appname appurl modulefile apphome release

  puts stderr "The $modulefile modulefile defines the default system paths and"
  puts stderr "environment variables needed to use $appname release $release.\n"
  puts stderr "Documentation on $appurl.\n"
}

module-whatis   "EMEP-MSC/W chemical transport model"

set root        $apphome/Unimod.$release
set data        $famhome/Data

prereq buildenv-intel/2015-1
prereq hdf5/1.8.14-i1501
prereq netcdf/4.3.2-i1501-hdf5-1.8.14
#prereq fftw/3.3.4-i1501-impi-5.0.2.044
prereq python/2.7.9-basic-1


prepend-path PATH               $root/bin

setenv         EMEP_VERSION       $release
setenv         EMEP_DATA          $root/data
setenv         EMEP_DATA_ROOT     $data


